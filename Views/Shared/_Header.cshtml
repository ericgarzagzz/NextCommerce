<!-- header start -->
<header id="home">
    <div class="top-header">
        <div class="container-fluid-lg">
            <div class="row">
                <div class="col-auto d-xl-block d-none">
                    <ul class="border-list">
                        @if (await settings.IsSetAsync(SettingType.TOP_BAR_LEYEND_1))
                        {
                            <li>@(Html.Raw(await settings.GetAsync(SettingType.TOP_BAR_LEYEND_1)))</li>
                        }
                        @if (await settings.IsSetAsync(SettingType.TOP_BAR_LEYEND_2))
                        {
                            <li>@(Html.Raw(await settings.GetAsync(SettingType.TOP_BAR_LEYEND_2)))</li>
                        }
                    </ul>
                </div>
                <div class="col-auto d-sm-block d-none">
                    @if (await settings.IsSetAsync(SettingType.TOP_BAR_LEYEND_3))
                    {
                        <p class="font-dark-30 mb-0">@(Html.Raw(await settings.GetAsync(SettingType.TOP_BAR_LEYEND_3)))</p>
                    }
                </div>
                @if (User.IsAuthenticated())
                {
                    <div class="col-auto">
                        <ul class="border-list">
                            <li>
                                <div class="dropdown top-header-dropdown">
                                    <a class="dropdown-toggle" href="javascript:void(0)" role="button"
                                   id="dropdownMenuLink" data-bs-toggle="dropdown">
                                        <span>Hola, @(signInManager.UserManager.GetUserName(User))</span>
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                                        <li class="w-100">
                                            <a class="dropdown-item" href="@Url.ActionLink("Index", "UserDashboard")">Mi cuenta</a>
                                        </li>
