                                    var cartViewModel = new CartViewModel();

                                    if (User.IsAuthenticated())
                                    {
                                        var user = await signInManager.UserManager.GetUserAsync(User);
                                        cartViewModel = await shoppingCart.GetCartFromUser(user.Id);
                                    } else {
                                        var shoppingSessionId = Context.Session.GetShoppingSessionId();
                                        if (shoppingSessionId.HasValue) 
                                        {
                                            cartViewModel = await shoppingCart.GetCartFromSession(shoppingSessionId.Value);
                                        }
                                    }
                                }
                                <li class="onhover-dropdown cart-dropdown">
                                    <button type="button" class="btn btn-solid-default btn-spacing">
                                        <i data-feather="shopping-cart" class="pe-2"></i>
                                        <span>@cartViewModel.TotalStr</span>
                                    </button>
                                    <div class="onhover-div">
                                        <div class="cart-menu">
                                            <div class="cart-title">
                                                <h6>
                                                    <i data-feather="shopping-bag"></i>
                                                    <span class="label label-theme rounded-pill">@cartViewModel.TotalQty</span>
                                                </h6>
                                                <span class="d-md-none d-block">
                                                    <i class="fas fa-arrow-right back-cart"></i>
                                                </span>
                                            </div>
                                            @if (cartViewModel.Items.Any())
                                            {
                                                <ul class="custom-scroll">
                                                    @foreach (var item in cartViewModel.Items)
                                                    {
                                                        <li>
                                                            <div class="media">
                                                                @if (string.IsNullOrEmpty(item.ProductImage))
                                                                {
                                                                    <img src="~/front/images/fashion/product/front/1.jpg"
                                                                         class="img-fluid blur-up lazyload" alt="">
                                                                }
                                                                else
                                                                {
                                                                    <img src="~/front/images/product/@item.ProductImage"
                                                                         class="img-fluid blur-up lazyload" alt="">
                                                                }
                                                                <div class="media-body">
                                                                    <h6>@item.ProductName</h6>
                                                                    <div class="qty-with-price">
                                                                        <span>@item.UnitPriceStr</span>
                                                                        <span>
                                                                            <input type="number" class="form-control"
                                                                                   value="@item.Quantity">
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                                <button type="button" class="btn-close d-block d-md-none"
                                                                        aria-label="Close">
                                                                    <i class="fas fa-times"></i>
                                                                </button>
                                                            </div>
                                                        </li>
                                                    }
                                                    @if (cartViewModel.Fees > 0)
                                                    {
                                                        <li>
                                                            <div class="media">
                                                                <img src="~/front/images/fashion/product/front/1.jpg"
                                                                     class="img-fluid blur-up lazyload" alt="">
                                                                <div class="media-body">
                                                                    <h6>Cuota de pago en línea</h6>
                                                                    <div class="qty-with-price">
                                                                        <span>@cartViewModel.FeesStr</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            } else
                                            {
                                                <p class="text-center m-4 text-muted">No hay elementos en el carrito</p>
                                            }
                                        </div>
                                        <div class="cart-btn">
                                            <h6 class="cart-total">
                                                <span class="font-light">Total:</span>
                                                @cartViewModel.TotalStr
                                            </h6>
                                            <button onclick="location.href = '@(Url.ActionLink("Index", "Cart"))';" type="button"
                                                    class="btn btn-solid-default btn-block">
                                                Proceder al pago
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
